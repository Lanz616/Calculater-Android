<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             android:background="#000000">

    <TextView
        android:gravity="bottom|right"
        android:textSize="70dp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/white_bg"
        android:id="@+id/textView"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:stretchColumns="*">

        <Button
            android:id="@+id/bt_clean"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_span="1"
            android:background="@drawable/change1"
            android:text="AC"
            android:textAllCaps="false"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/bt_del"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_span="2"
            android:background="@drawable/change3"
            android:text="Del"
            android:textAllCaps="false"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/bt_divide"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_span="1"
            android:background="@drawable/change4"
            android:text="÷"
            android:textSize="35dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="7"
            android:background="@drawable/white_change"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bt_7"/>

        <Button
            android:id="@+id/bt_8"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/white_change"
            android:text="8"
            android:textSize="35dp"/>

        <Button
            android:text="9"
            android:background="@drawable/white_change"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bt_9"/>

        <Button
            android:id="@+id/bt_multiply"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/change5"
            android:text="×"
            android:textSize="35dp"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="4"
            android:background="@drawable/white_change"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bt_4"/>

        <Button
            android:text="5"
            android:background="@drawable/white_change"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bt_5"/>

        <Button
            android:text="6"
            android:background="@drawable/white_change"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:id="@+id/bt_6"/>

        <Button
            android:id="@+id/bt_minus"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/change4"
            android:text="-"
            android:textSize="35dp"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/white_change"
            android:text="1"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/bt_2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/white_change"
            android:text="2"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/bt_3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/white_change"
            android:text="3"
            android:textSize="35dp"/>

        <Button
            android:id="@+id/bt_add"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/change5"
            android:text="＋"
            android:textSize="35dp"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <Button
            android:text="0"
            android:background="@drawable/white_change"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="35dp"
            android:layout_span="2"
            android:id="@+id/bt_0"/>

        <Button
            android:id="@+id/bt_point"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/change6"
            android:text="."
            android:textSize="35dp"/>

        <Button
            android:id="@+id/bt_equal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/change"
            android:text="="
            android:textSize="35dp"/>
    </TableRow>

</TableLayout>
